
# Directory aliases
alias ..="cd .."

# Tool aliases
alias a="atom ."
alias b="dolphin . > /dev/null 2>&1 &"

# Git aliases
alias gst="git status"
alias gd="git diff"
alias ga="git add"
alias gc="git commit -e"
alias gp="git push"
alias gpl="git pull"
alias gco="git checkout"
alias gcb="git checkout -b"
alias coke="git-cola"
alias pepsi="git-cola dag -- --all"

# APT
alias aup="sudo apt update"
alias aug="sudo apt upgrade"
alias audg="sudo apt dist-upgrade"
alias aupg="sudo apt update; sudo apt upgrade"
alias aupdg="sudo apt update; sudo apt dist-upgrade"
alias ai="sudo apt install"
alias arm="sudo apt remove"
alias ap="sudo apt purge"

# Custom aliases
alias hedit="sudo vi /etc/hosts"
